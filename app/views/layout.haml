!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    / The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    %title= @title || "Funds"
    / Bootstrap core CSS
    %link{:href => url("assets/css/bootstrap.min.css"), :rel => "stylesheet"}/
    %link{:href => url("assets/css/bootstrap-theme.min.css"), :rel => "stylesheet"}/
    %link{:href => url("assets/css/app.css"), :rel => "stylesheet"}/
    %script{:src => url("assets/js/jquery-3.1.1.min.js")}
    %script{:src => url("assets/js/bootstrap.min.js")}
    :css
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      }
  %body
    %nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "#"} Funds
        #navbar.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li{class: active_class('balances')}
              %a{:href => url('balances')} Balances
            %li{class: active_class('register')}
              %a{:href => url('register')} Register
        / /.nav-collapse
    .container
      =yield
